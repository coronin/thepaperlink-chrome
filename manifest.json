{
  "name": "__MSG_appName__",
  "version": "0.4.4",
  "minimum_chrome_version": "16",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "http://www.ncbi.nlm.nih.gov/*",
    "https://www.ncbi.nlm.nih.gov/*",
    "http://cail.jit.su/",
    "https://pubget-hrd.appspot.com/static/humans.txt",
    "https://pubget-hrd.appspot.com/api*",
    "http://0.pl4.me/api*",
    "http://scholar.google.com/*",
    "http://linkinghub.elsevier.com/retrieve/pii/*"
  ],
  "icons": {
    "128": "128.png",
    "48": "48.png",
    "19": "19.png",
    "16": "16.png"
  },
  "options_page" : "options.html",
  "background_page" : "background.html",
  "page_action": {
    "default_icon": "19grey.png",
    "default_title": "the Paper Link for PubMed: click to display detailed info",
    "default_popup" : "popup.html"
  },
  "content_scripts": [ {
    "matches": [
      "http://www.ncbi.nlm.nih.gov/*",
      "https://www.ncbi.nlm.nih.gov/*"
    ],
    "exclude_globs": [
        "*://www.ncbi.nlm.nih.gov/pubmed/",
        "*://www.ncbi.nlm.nih.gov/sites/entrez/",
        "*://www.ncbi.nlm.nih.gov/sites/entrez?db=pubmed"
    ],
    "js": [ "contentscript.js" ],
    "run_at" : "document_idle",
    "all_frames" : true
  } ]
}
